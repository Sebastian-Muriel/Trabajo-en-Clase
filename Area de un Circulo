/******************************************************************************
Hallar el area de un Circulo  

*******************************************************************************/
#include <stdio.h>                                                              //se incluye a la libreria//
#include <math.h>                                                               //se incluye a la libreria//
#define pi 3.1416                                                               //se declara a la variable como definida//
void main ()                                                                    //no devuelve ningun valor//
{
    float radio, area=0;                                                        //variables que se va a utilizar de tipo flotante//
    printf("Ingrese el radio");                                                 //se ingresa el valor del radio//
    scanf("%f", &radio);                                                        //lee el valor del radio//
    area=pi*radio*radio;                                                        //formula para sacar el area del circulo//
    printf("El area es:%.2f", area);                                            //se imprime el area del circulo//
}
