        printf("Escoja la opcion:");                                            //se ingresa la opcion//
        scanf("%d",&op);                                                        //lee la opcion//
        switch(op)                                                              //comienzo de los casos//
        {
            case 1:                                                             //inicio del caso 1//
            printf ("Ingrese el nombre del cliente:");                          //se ingresa el nombre//
            scanf ("%s", &nombre);                                              //lee el nombre//
